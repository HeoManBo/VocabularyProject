<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingView"
    android:orientation="vertical"
    android:background="@drawable/broad_back">

    <Switch
        android:id="@+id/lock_scr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingLeft="30dp"
        android:text="잠금화면"
        android:textColor="@color/white"
        android:thumbTint="@color/white"
        android:trackTint="@color/white"/>


    <TextView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="선택"
        android:visibility="invisible"
        android:textColor="@color/white"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/white"/>


    <TextView
        android:id="@+id/btn_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="100dp"
        android:layout_marginTop="24dp"
        android:text="크기 조절 버튼"
        android:textColor="@color/white"/>

    <RadioGroup
        android:id="@+id/text_sizeGruop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:textColor="@color/white">

        <RadioButton
            android:id="@+id/text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작게"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>

        <RadioButton
            android:id="@+id/text_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중간"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>

        <RadioButton
            android:id="@+id/text_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="크게"
            android:textColor="@color/white"
            android:buttonTint="@color/white"/>

    </RadioGroup>

    <TextView
        android:id="@+id/madeby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:textAlignment="center"
        android:text="designed by 김태형, ★류정훈★, 변석찬"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Copyright 2021. AndroidSoongtudio all rights reserved."
        android:textColor="@color/white"/>


</LinearLayout>