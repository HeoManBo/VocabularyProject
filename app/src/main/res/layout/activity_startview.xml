<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/broad_back">

    <Button
        android:id ="@+id/Word_learning"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text = "단어 암기"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <Button
        android:id = "@+id/Word_learning_test"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text = "단어 암기 TEST"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

    <Button
        android:id = "@+id/private_word_add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text = "개인 단어 추가"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/end"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text = "종료"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

    <ImageButton
        android:layout_marginTop="30dp"
        android:layout_marginLeft="14dp"
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:src="@drawable/settingicon"
        android:text="설정" />



</RelativeLayout>